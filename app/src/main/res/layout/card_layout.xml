<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <TextView
            android:layout_width="600dp"
            android:id="@+id/cname"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:text="COMMON NAME poisonous or non posionous"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/sciPic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/cname"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/baseline_science_24"
            app:tint="#808080" />

        <TextView
            android:id="@+id/sname"
            android:layout_toEndOf="@+id/sciPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cname"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Scientific Name"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/percent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/sname"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/baseline_percent_24"
            app:tint="#808080" />

        <TextView
            android:id="@+id/accuracy"
            android:layout_toEndOf="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sname"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Accuracy"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/accuracy"
            android:background="#808080"/>

    </RelativeLayout>


</RelativeLayout>